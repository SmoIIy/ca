<style>
    @media (min-width:768px) {
        footer {
            position: relative;
            bottom: 0;
            max-width: 1600px;
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 50px;
        }
        .row {
            width: 100%;
            display: flex;
            justify-content: space-around;
            align-items: flex-start;
            gap: 50px;
        }
        .column {
            height: 200px;
        }
        .links {
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
        }
        .some-container {
            height: 50px;
            display: flex;
            gap: 10px;
        }
        .some-container img {
            width: 44px;
        }
        .some-container a {
            font-size: 10px;
        }
        #logo {
            height: 100px;
        }
        .some-container-links {
            display: flex;
            flex-direction: column;
            justify-content: space-around;
        }
    }   
    @media (max-width:768px) {
        footer {
            position: relative;
            bottom: 0;
            width: 100vw;
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 50px;
            padding: 15px;
        }
        .row {
            width: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            align-items: flex-start;
            gap: 50px;
        }
        .column {
            height: 200px;
        }
        .links {
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
        }
        .some-container {
            height: 50px;
            display: flex;
            gap: 10px;
        }
        .some-container img {
            width: 44px;
        }
        .some-container a {
            font-size: 10px;
        }
        #logo {
            height: 100px;
        }
        .some-container-links {
            display: flex;
            flex-direction: column;
            justify-content: space-around;
        }
    }
    #telefonnummer {
        font-size: 3rem;
    }
    a {
        text-decoration: none;
        color: var(--dark-brown);
        transition: color 200ms ease;
        font-size: 1.125rem;
    } 
    a:hover {
        color: var(--main-blue);
    }
       
</style>